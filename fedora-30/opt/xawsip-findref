#!/bin/sh
[ "$#" -gt 0 ] || {
	exec >&2
	echo "Usage: $0 {user|''} [{group|''} [keyword]]"
	exit 1
}
exec /usr/bin/find / -xdev \! \( ${1:+\!} ${1:+-user} ${1:+"$1"} ${2:+\!} ${2:+-group} ${2:+"$2"} ${3:+\!} ${3:+\(} ${3:+-path} ${3:+"/etc/*"} ${3:+\(} ${3:+-name} ${3:+"*$3*"} ${3:+-o} ${3:+-lname} ${3:+"*$3*"} ${3:+\)} ${3:+\)} \) -ls
